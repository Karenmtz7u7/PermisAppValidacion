<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/grischido"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/icon_person"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="20"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/userimagetxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/user" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_marginLeft="6dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_person_24" />

                <TextView
                    android:id="@+id/nameusertxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins"
                    android:text="Nombre de usuario"
                    android:textAppearance="@style/nombre_de_u"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_work" />

                <TextView
                    android:id="@+id/areatxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:layout_marginLeft="5dp"
                    android:text="Ãrea de trabajo"
                    android:textAppearance="@style/nombre_de_u"
                    android:textSize="13sp"/>
            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_outline_numbers_24" />

                <TextView
                    android:id="@+id/numberjobtxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="No. de empleado"
                    android:layout_marginLeft="5dp"
                    android:textAppearance="@style/nombre_de_u"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_baseline_badge_24" />

                <TextView
                    android:id="@+id/rfctxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="RFC"
                    android:layout_marginLeft="5dp"
                    android:textAppearance="@style/nombre_de_u"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/editBtn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textAppearance="@style/llegar_tard"
                app:backgroundTint="#4C9AFB"
                android:text="Editar"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:textSize="10sp">
            </Button>
            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textAppearance="@style/llegar_tard"
                app:backgroundTint="@color/rojo2"
                android:text="Eliminar"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:textSize="10sp">
            </Button>

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>