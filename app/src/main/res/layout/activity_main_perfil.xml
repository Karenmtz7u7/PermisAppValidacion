<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivityPerfil">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View
        android:id="@+id/rectangle_4"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:text="Perfil"
        android:textAppearance="@style/perfil"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/icon_person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_baseline_keyboard_backspace_24"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_4"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_4"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/icon_person"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:cardCornerRadius="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rectangle_4"
        app:layout_constraintVertical_bias="0.106"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/userimagetxt"
            android:layout_width="159dp"
            android:layout_height="159dp"
            app:srcCompat="@drawable/user" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/verde2"
        app:cardCornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/LLButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/icon_person"
        app:layout_constraintVertical_bias="0.92"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/Camerabtn"
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:layout_height="30dp"
            android:background="@drawable/ic_camera_24"
            android:backgroundTint="@color/black" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/LLButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_person"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/editprofilebtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="@color/botonesperfil"
            android:fontFamily="@font/poppins"
            android:text="Editar Información"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@+id/infopltxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon_person"
            app:layout_constraintVertical_bias="0.409"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LLButton"
            app:layout_constraintVertical_bias="0.232">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/infopltxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grischido"
                    android:fontFamily="@font/poppins"
                    android:text="Información personal"
                    android:textAppearance="@style/informaci_n" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="26dp"
                        android:layout_height="29dp"
                        android:background="@drawable/ic_person_24" />


                    <TextView
                        android:id="@+id/nameusertxt"
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/poppins"
                        android:text="Nombre de usuario"
                        android:textAppearance="@style/nombre_de_u"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="26dp"
                        android:layout_height="29dp"
                        android:background="@drawable/ic_email_" />

                    <TextView
                        android:id="@+id/emailusertxt"
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/poppins"
                        android:text="Correo@electronico.com"
                        android:textAppearance="@style/nombre_de_u"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="29dp"
                        android:background="@drawable/ic_work" />

                    <TextView
                        android:id="@+id/areatxt"
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/poppins"
                        android:text="Área de trabajo"
                        android:textAppearance="@style/nombre_de_u"
                        android:textSize="15sp" />
                </LinearLayout>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="26dp"
                        android:layout_height="29dp"
                        android:background="@drawable/ic_outline_numbers_24" />

                    <TextView
                        android:id="@+id/numberjobtxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/poppins"
                        android:text="No. de empleado"
                        android:textAppearance="@style/nombre_de_u"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@drawable/ic_outline_phone_24" />

                    <TextView
                        android:id="@+id/phoneusertxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/poppins"
                        android:text="Telefono"
                        android:textAppearance="@style/nombre_de_u"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/cuentatxt"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="60dp"
                    android:background="@color/grischido"
                    android:fontFamily="@font/poppins"
                    android:text="Datos de la cuenta"
                    android:textAppearance="@style/informaci_n" />

                <LinearLayout
                    android:id="@+id/subirhorario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="26dp"
                        android:layout_height="29dp"
                        android:background="@drawable/ic_outline_vpn_key_24"
                        android:rotation="130" />

                    <TextView
                        android:layout_width="286dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/poppins"
                        android:text="Cambiar contraseña"
                        android:textAppearance="@style/nombre_de_u"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="26dp"
                        android:layout_height="29dp"
                        android:background="@drawable/ic_keyboard_arrow_right_" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/keytxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="26dp"
                        android:layout_height="29dp"
                        android:background="@drawable/ic_outline_delete_24" />

                    <TextView
                        android:id="@+id/deleteimgtxt"
                        android:layout_width="286dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/poppins"
                        android:text="Eliminar cuenta"
                        android:textAppearance="@style/nombre_de_u"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="26dp"
                        android:layout_height="29dp"
                        android:background="@drawable/ic_keyboard_arrow_right_" />
                </LinearLayout>


            </LinearLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>