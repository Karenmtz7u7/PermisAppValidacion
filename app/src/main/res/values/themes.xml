<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PermisAppRH" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verde1</item>
        <item name="colorPrimaryVariant">@color/gris</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/verde2</item>
        <item name="colorSecondaryVariant">@color/verde3</item>
        <item name="colorOnSecondary">@color/black</item>

    </style>

    <style name="Theme.PermisAppRH.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>